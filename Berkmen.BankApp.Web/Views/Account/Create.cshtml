@model UserListModel

@{ 
	Layout= "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
	<div class="col-6">
		<h3>Hesap eklenecek kişinin bilgileri</h3>
		<p>
			Hesabı ekleyeceğiniz kullanıcının adı: @Model.Name
		</p>
		<p>
			Kullanıcının Soyadı: @Model.Surname
		</p>
		<p>
			Kullanıcının aktif hesap sayısı: <getAccountCount application-user-id="@Model.Id"></getAccountCount>
		</p>

	</div>

	 <div class="col-6">
		 <p>Ekleme İşlemi</p>
		 <form method="post" asp-action="Create" asp-controller="Account">
			 <input type="hidden" name="ApplicationUserId" value="@Model.Id" />

			 <div class="mb-3">
				 <label class="form-label">Hesap Numarası :</label>
			 	<input type="number" class="form-control" name="AccountNumber" /> @*account number ve balance modeldeki ismiyle aynı olmalı.Öyle eşleşiyor*@
			 </div>

			 <div class="mb-3">
			 	<label class="form-label">Bakiye : </label>
			 	<input type="number" class="form-control" name="Balance" /> 

			 </div>

		 	<div class="mb-3">
		 		<button class="btn btn-primary">Kaydet</button>

		 	</div>

		 </form>

	 </div>

</div>